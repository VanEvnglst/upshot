<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textColor">#000000</item>
        <!-- Set status bar color. -->
        <item name="android:statusBarColor">@color/app_bg</item>
        <!-- Set status bar color to be light (false) or dark (true). -->
        <!-- <item name="android:windowLightStatusBar">false</item> -->
        <item name="android:datePickerDialogTheme">@style/Picker.Theme</item>
        <item name="android:timePickerDialogTheme">@style/Picker.Theme</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/splashscreen_bg</item>
        <item name="android:background">@drawable/background_splash</item>
    </style>

    <style name="Picker.Theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">#6200EE</item>
        <item name="colorAccent">#6200EE</item>
        <item name="colorPrimaryDark">#3700B3</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:fontFamily">@font/raleway_regular</item>
    </style>
</resources>
